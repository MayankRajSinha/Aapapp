<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_observers"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aap.aapapp.org.aap.aapapp.observers">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OBSERVERS"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="34dp"/>
    <Spinner
        android:id="@+id/observers_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/spinner_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER PC :"
            android:textSize="22dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        <Spinner
            android:id="@+id/sub_observer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sector_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER LAC :"
            android:textSize="22dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        <Spinner
            android:id="@+id/sector_sub_observer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/observer_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="FIND"/>
    <ListView
        android:id="@+id/observers_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>